<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10 text-center">
        <div class="row">
            <div class="col-md-12">
                <h1>EAT-SOME-BURGERS!!!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6" id="burg-uneaten">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6" id="burg-eaten">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{burger_name}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
    <div class="col-md-2"></div>
</div>