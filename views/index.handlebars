<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center">
        <div class="row">
            <div class="col-md-12">
                <h1>EAT-SOME-BURGERS!!!</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center" id="burg-uneaten">
                <p>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </p>
            </div>
            <div class="col-md-6 text-center" id="burg-eaten">
                <p class = "burger">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{burger_name}}
                    {{/if}}
                    {{/each}}
                </p>
            </div>
        </div>
        <div class="row">

        </div>
    </div>
    <div class="col-md-2"></div>
</div>